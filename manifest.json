{
  "manifest_version": 3,
  "name": "飞书转公众号助手",
  "version": "1.5",
  "description": "将飞书文档转换为微信公众号HTML格式",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.feishu.cn/docx/*", "*://*.larksuite.com/docx/*", "*://*.feishu.cn/wiki/*"],
      "js": ["content.js"]
    }
  ]
}